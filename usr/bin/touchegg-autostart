# -- Exit on errors.

set -eu


# -- Use a log.

LOG_FILE="$HOME/.nx-touchegg-kde.log"
MAX_LOG_SIZE=$((1024 * 1024))


# -- Functions.

log_message() {
    if [ -f "$LOG_FILE" ] && [ "$(stat --format=%s "$LOG_FILE")" -ge "$MAX_LOG_SIZE" ]; then
        mv "$LOG_FILE" "$LOG_FILE.bak"
        echo "$(date +'%Y-%m-%d %H:%M:%S') - Log rotated. Previous log saved as .nx-touchegg-monitor.log.bak" > "$LOG_FILE"
    fi
    echo "$(date +'%Y-%m-%d %H:%M:%S') - $1" >> "$LOG_FILE"
}

exec >>"$LOG_FILE" 2>&1

start_touchegg_daemon() {
    if ! pgrep -x touchegg > /dev/null; then
        log_message "Starting touchegg daemon..."
        touchegg --daemon
        sleep 1
    fi

    if pgrep -x touchegg > /dev/null; then
        log_message "touchegg daemon is running."
    else
        log_message "Failed to start touchegg daemon."
        return 1
    fi
}

monitor_touchegg_client() {
    log_message "Starting monitoring loop for touchegg client..."
    while true; do
        if ! pgrep -f "touchegg --client" > /dev/null; then
            log_message "touchegg client is not running. Restarting..."
            touchegg --client >>"$LOG_FILE" 2>&1 &
            sleep 2
        fi

        sleep 5
        if ! pgrep -f "touchegg --client" > /dev/null; then
            log_message "touchegg client crashed. Restarting..."
        else
            log_message "touchegg client is running."
        fi
    done
}


main() {
    start_touchegg_daemon
    monitor_touchegg_client
}


# -- Check if the process is running, kill it and start it.

log_message "touchegg-autostart is running."

main
